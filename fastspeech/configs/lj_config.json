{
  "name": "lj_config",
  "n_gpu": 1,
  "overfit_on_one_batch": "True",
  "preprocessing": {
    "sr": 22050,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 80
      }
    }
  },
  "arch": {
    "type": "FastSpeechModel",
    "args": {
        "emb_size": 384,
        "max_len": 5000,
        "num_blocks": 6,
        "n_heads": 1,
        "kernel_size": 3,
        "fft_hidden_size": 1536,
        "dropout_p": 0.1,
        "predictor_kernel_size": 3,
        "alpha": 1,
        "mels": 80
    }
  },
  "data": {
    "all": {
      "batch_size": 1,
      "num_workers": 5,
      "test_share": 0.2,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4,
      "betas": [0.9, 0.98],
      "eps": 1e-9
    }
  },
  "lr_scheduler": {
    "type": "OneCycleLR",
    "frequency": "batch",
    "args": {
      "max_lr": 3e-4,
      "total_steps": 80000
    }
  },
  "loss": {
    "type": "FastSpeechLoss",
    "args": {}
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "wandb_project": "fastspeech",
    "len_epoch": 1,
    "grad_norm_clip": 2,
    "beam_search": "False"
  }
}
